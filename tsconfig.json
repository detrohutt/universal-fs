{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noErrorTruncation": true
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
